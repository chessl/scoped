{
  "name": "style-scoped",
  "version": "0.2.2",
  "description": "style[scoped] polyfill",
  "main": "lib/index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "files": [
    "src",
    "lib",
    "dist"
  ],
  "author": "Sam Thorogood <sam.thorogood@gmail.com>",
  "license": "Apache-2",
  "scripts": {
    "test": "npm run build:umd-polyfill && headless-test --cors test.js",
    "closure": "google-closure-compiler --js=src/*.js --checks_only --module_resolution=node --compilation_level=ADVANCED",
    "build": "run-p build:**",
    "build:cjs": "rollup -i src/index.js -o lib/index.js -f cjs",
    "build:cjs-polyfill": "rollup -i src/polyfill.js -o lib/polyfill.js -f cjs",
    "build:umd-polyfill": "cross-env NODE_ENV=development rollup -i src/polyfill.js -o dist/scoped.js -c rollup.umd.config.js",
    "build:umd-polyfill:min": "cross-env NODE_ENV=production rollup -i src/polyfill.js -o dist/scoped.min.js -c rollup.umd.config.js",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "google-closure-compiler": "^20220301.0.0",
    "headless-test": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.32.1",
    "rollup-plugin-uglify": "^6.0.4"
  }
}
